{
  "private": true,
  "name": "courtofcapital",
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "cards:report": "tsx tools/cards-report.ts",
    "cards:prompts:sync": "tsx tools/sync-card-art-prompts.ts",
    "cards:prompts:sync:all": "tsx tools/sync-card-art-prompts.ts --include-existing-art",
    "cards:validate": "tsx tools/cards-validate.ts",
    "deploy": "npm run type-check && npm run lint && npm run test && devvit upload",
    "dev": "devvit playtest",
    "launch": "npm run deploy && devvit publish",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "login": "devvit login",
    "prettier": "prettier --write .",
    "sim:balance": "tsx tools/simulate-balance.ts",
    "sim:balance:faction-only": "tsx tools/simulate-balance.ts --faction-only",
    "sim:balance:det": "tsx tools/simulate-balance.ts --deterministic",
    "sim:balance:det:faction-only": "tsx tools/simulate-balance.ts --deterministic --faction-only",
    "sim:balance:batch": "tsx tools/sim-balance-batch.ts",
    "sim:balance:batch:faction-only": "tsx tools/sim-balance-batch.ts --faction-only",
    "sim:balanced100": "tsx tools/sim-balance-batch.ts --runs 100",
    "sim:balanced100:faction-only": "tsx tools/sim-balance-batch.ts --runs 100 --faction-only",
    "test:cards-v2-pilot": "tsx tools/test-cards-v2-pilot.ts",
    "test:cards-v2-runtime": "tsx tools/test-cards-v2-runtime.ts",
    "test:phase1-integrity": "tsx tools/test-phase1-integrity.ts",
    "test:phase2-hardening": "tsx tools/test-phase2-hardening.ts",
    "test:phase3-polling": "tsx tools/test-phase3-polling.ts",
    "test:phase4-consistency": "tsx tools/test-phase4-consistency.ts",
    "test:bot-plan": "tsx tools/test-bot-plan.ts",
    "test:leader-rules": "tsx tools/test-leader-rules.ts",
    "test": "npm run test:cards-v2-pilot && npm run test:cards-v2-runtime && npm run test:phase1-integrity && npm run test:phase2-hardening && npm run test:phase3-polling && npm run test:phase4-consistency && npm run test:bot-plan && npm run test:leader-rules && npm run sim:balance",
    "dev:det": "npm run sim:balance:det",
    "type-check": "tsc --build"
  },
  "engines": {
    "node": ">=22.2.0"
  },
  "dependencies": {
    "@devvit/start": "0.12.13",
    "@devvit/web": "0.12.13",
    "@fontsource/cinzel": "^5.2.8",
    "@hono/node-server": "^1.19.9",
    "clsx": "2.1.1",
    "hono": "4.12.2",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@tailwindcss/vite": "4.1.18",
    "@types/node": "^22.19.7",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "devvit": "0.12.13",
    "eslint": "9.39.2",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.4.26",
    "globals": "17.2.0",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tailwindcss": "4.1.18",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite": "7.3.1"
  }
}
