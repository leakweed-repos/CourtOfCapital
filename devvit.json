{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "courtofcapital",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "splash.html"
      },
      "game": {
        "entry": "game.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "Open current weekly Court post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/triggers/on-app-install"
  },
  "scheduler": {
    "tasks": {
      "weekly-rollover": {
        "endpoint": "/internal/cron/weekly-rollover",
        "cron": "0 6 * * 0"
      },
      "weekly-intro-comment": {
        "endpoint": "/internal/cron/weekly-intro-comment",
        "cron": "* * * * *"
      }
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build"
  },
  "dev": {
    "subreddit": "courtofcapital_dev"
  }
}
